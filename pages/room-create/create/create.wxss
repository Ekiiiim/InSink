/* pages/create/create.wxss */
.content {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-around;
}
.type-btn {
  display:flex;
  justify-content: center;
  width: 120rpx !important;
  height: 120rpx; 
  border-radius: 50%;
}
.name {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-around;
}
.population {
  display: flex;
  flex-direction: column;
}
.population-btns {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-around;
}
.ppl-btn {
  padding: 0;
  display: flex;
  justify-content: center;
  height: 80rpx;
  width: 140rpx !important;
}
.ppl-input {
  margin-top: 20rpx;
  align-self: center;
  display: flex;
  flex-direction: row;
}
.time {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: space-around;
}
.footer {
  height: fit-content;
  width: 100%;
  position: absolute;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.break-line {
  width:100%;
  margin: 50rpx 0;
  align-self: center;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.break-line:before {
  content:""; 
  margin-right: 20rpx;
  height:1px; 
  border: none;
  border-top:1px solid #000;
  flex: 1 1 0rpx;
}
.break-line::after {
  content:""; 
  margin-left: 20rpx;
  height:1px; 
  border: none;
  border-top:1px solid #000;
  flex: 1 1 0rpx;
}