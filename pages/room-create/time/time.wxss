.break-line {
  width:100%;
  margin: 50rpx 0;
  align-self: center;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.break-line:before {
  content:""; 
  margin-right: 20rpx;
  height:1px; 
  border: none;
  border-top:1px solid #000;
  flex: 1 1 0rpx;
}
.break-line::after {
  content:""; 
  margin-left: 20rpx;
  height:1px; 
  border: none;
  border-top:1px solid #000;
  flex: 1 1 0rpx;
}